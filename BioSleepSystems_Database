  <script>
    function verifier() {
      const mdp = document.getElementById("password").value;
      if (mdp === "labyrinthe") { // <-- change le mot de passe ici
        document.getElementById("secret").style.display = "block";
      } else {
        alert("Accès refusé. Essaie encore.");
      }
    }
